<div class="container w-50 mx-auto px-auto ">

    <%= form_with model: album  do |form|%>
      <div class="mb-3">
        <%=form.label :title,class:"form-label"%><br>
        <%=form.text_field :title,class:"form-control"%>
        <%album.errors.full_messages_for(:title).each do |message|%>
          <div><%=message%></div>
        <%end%>
      </div>

      <div class="mb-3">
        <%=form.label :description,class:"form-label"%><br>
        <%=form.text_field :description,class:"form-control"%>
        <%album.errors.full_messages_for(:description).each do |message|%>
          <div><%=message%></div>
        <%end%>
      </div>

      <div class="mb-3">
        <%=form.label :cover_image,class:"form-label"%><br>
        <%=form.file_field :cover_image,class:"form-control"%>
      </div>

      <div class="mb-3">
        <%=form.label :images,"select Images",class:"form-label"%><br>
        <%=form.file_field :images,direct_upload: true,multiple: true, class:"form-control"%>
      </div>

      <div class="mb-3">
        <%=form.label :tagged,"Album Tags",class:"form-label"%><br>
        <%=form.text_field :tagged,class:"form-control"%>
      </div>

      <div class="mb-3">
        <%=form.check_box :published,checked:true,class:"form-check-input"%>
        <%=form.label :published,class:"form-check-label"%>
      </div>

      <div class="mb-3">
       <%=form.submit%>
      </div>
    <%end%>
</div>
